# Political Strategy Maker - Environment Configuration
# Rename this file to .env and fill in your values

# ============= Runtime =============
APP_ENV=local
LOG_LEVEL=INFO
DEBUG=false

# ============= LLM Configuration =============
# Choose your LLM provider: openai or gemini
LLM_PROVIDER=openai

# OpenAI Configuration (recommended for production)
OPENAI_API_KEY=your-openai-api-key-here
# Model options (in order of capability):
#   - gpt-4o          : Most advanced, best accuracy (recommended)
#   - gpt-4o-mini     : Faster, cheaper, still very capable
#   - gpt-4-turbo     : Previous generation
#   - o1-preview      : Best for complex reasoning (slower)
OPENAI_MODEL=gpt-4o
OPENAI_EMBED_MODEL=text-embedding-3-large
OPENAI_TEMPERATURE=0.1

# ===== Rate-limit mitigation (Option B: model split) =====
# Use a smaller/faster model for reranking to reduce OpenAI rate limits.
# - score: no LLM rerank (fastest, cheapest)
# - llm  : LLM-as-reranker (uses OPENAI_RERANK_MODEL below)
EVIDENCE_RERANK_MODE=score
OPENAI_RERANK_MODEL=gpt-4o-mini

# Final answer model (leave empty to use OPENAI_MODEL)
# OPENAI_FINAL_MODEL=gpt-4o

# Google Gemini Configuration (alternative)
GEMINI_API_KEY=your-gemini-api-key-here
# Gemini model options:
#   - gemini-1.5-pro  : Most capable
#   - gemini-1.5-flash: Faster responses
GEMINI_MODEL=gemini-1.5-pro
GEMINI_EMBED_MODEL=text-embedding-004

# ============= Local Storage =============
DATA_DIR=./data
INDEX_DIR=./index

# ============= AWS Configuration =============
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
DDB_TABLE_SESSIONS=
DDB_TABLE_MEMORY=

# ============= OpenSearch Configuration =============
# For local: Leave empty to use FAISS (no setup required)
# For AWS OpenSearch Service: https://your-domain.us-east-1.es.amazonaws.com
# For AWS OpenSearch Serverless: https://your-collection.us-east-1.aoss.amazonaws.com
OPENSEARCH_ENDPOINT=
OPENSEARCH_INDEX=political-strategy-maker
OPENSEARCH_PORT=443
OPENSEARCH_USE_SSL=true

# ============= RAG Configuration =============
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=20
TOP_K_RERANK=10

# ============= Agent Configuration =============
MAX_AGENT_ITERATIONS=15
MAX_RPM=10
AGENT_VERBOSE=true

# ============= Memory Configuration =============
SHORT_TERM_MAX_ITEMS=50
RELEVANCE_THRESHOLD=0.7

